{
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/socket.io/**",
        "destination": "https://webchat-production-f3ed.up.railway.app/socket.io/**"
      },
      {
        "source": "/api/**",
        "destination": "https://webchat-production-f3ed.up.railway.app/api/**"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
